<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-12">
            <div class="row">
                <div class="col-12">
                    <div class="shop-section-title">
                        <h1>On sale</h1>
                    </div>
                </div>
            </div>
            {% for product in products %}
            <div class="single-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-12">
                        <div class="list-image overlay">
                            <img src="https://via.placeholder.com/115x140" alt="#">
                            <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-12 no-padding">
                        <div class="content">
                            <h4 class="title"><a href="javascript:;">{{ product.name }}</a></h4>
                            <p class="price with-discount">${{ product.price }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="col-lg-4 col-md-6 col-12">
            <div class="row">
                <div class="col-12">
                    <div class="shop-section-title">
                        <h1>Best Seller</h1>
                    </div>
                </div>
            </div>
            {% for product in products %}
                <div class="single-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="list-image overlay">
                                <img src="https://via.placeholder.com/115x140" alt="#">
                                <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12 no-padding">
                            <div class="content">
                                <h4 class="title"><a href="{{ path('product_detail', {'slug': product.slug}) }}">{{ product.name }}</a></h4>
                                <p class="price with-discount">${{ product.price }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-lg-4 col-md-6 col-12">
            <div class="row">
                <div class="col-12">
                    <div class="shop-section-title">
                        <h1>Top viewed</h1>
                    </div>
                </div>
            </div>
            {% for product in products %}
                <div class="single-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="list-image overlay">
                                <img src="https://via.placeholder.com/115x140" alt="#">
                                <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12 no-padding">
                            <div class="content">
                                <h4 class="title"><a href="#{{ path('product_detail', {'slug': product.slug}) }}">{{ product.name }}</a></h4>
                                <p class="price with-discount">${{ product.price }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

