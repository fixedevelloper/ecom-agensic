<h3 class="title">Bestsellers</h3>
<div class="latest-product__slider owl-carousel">
    {% for item in bestsellers %}

        <div class="single-list latest-prdouct__slider__item">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="list-image overlay">
                        <img src="{{ asset('' ~ item.image)  | imagine_filter('product_small')}}" alt="#">
                        <a href="#" class="buy"><i class="fa fa-shopping-bag"></i></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12 no-padding">
                    <div class="content">
                        <h4 class="title"><a href="{{ path('product_detail', {'slug': item.slug}) }}">{{ item.name }}</a></h4>
                        <p class="price with-discount">${{ item.price }}</p>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
</div>

