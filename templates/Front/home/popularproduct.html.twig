{% for item in products %}
    <div>
        <div class="product-item">
            <div class="pi-img-wrapper">
                <img src="{{ asset('' ~ item.image ) }}"
                     class="img-responsive" alt="Berry Lace Dress">
                <div>
                    <a href="{{ asset('' ~ item.image ) }}"
                       class="btn btn-default fancybox-button">Zoom</a>
                    <a href="#product-pop-up" class="btn btn-default fancybox-fast-view"
                       data-value="{{ item.slug }}">View</a>
                </div>
            </div>
            <h3><a href="{{ path('product_detail', {'slug': item.slug}) }}">{{ item.name }}</a></h3>
            <div class="pi-price">{{ item.price }}.00</div>
            <a href="javascript:;" class="btn btn-default add2cart" data-id="{{ item.id }}">Add
                to cart</a>
            <div class="sticker sticker-new"></div>
        </div>
    </div>
{% endfor %}
