
{% for product in products %}
    <div class="single-product">
        <div class="product-img">
            <a href="{{ path('product_detail', {'slug': product.slug }) }}">
                <img class="default-img" src="{{ asset('' ~ product.image)  | imagine_filter('product_cat')}}" alt="#">
                <img class="hover-img" src="{{ asset('' ~ product.image)  | imagine_filter('product_cat')}}" alt="#">
            </a>
            <div class="button-head">
                <div class="product-action">
                   <a class="_modal" data-id="{{ product.id }}" title="Quick View" href="javascript:;"><i class=" ti-eye"></i><span>Quick Shop</span></a>
                    <a title="Wishlist" href="#"><i class=" ti-heart "></i><span>Add to Wishlist</span></a>
                    <a title="Compare" href="#"><i class="ti-bar-chart-alt"></i><span>Add to Compare</span></a>
                </div>
                <div class="product-action-2">
                    <a title="Add to cart" href="javascript:;" data-id="{{ product.id }}">Add to cart</a>
                </div>
            </div>
        </div>
        <div class="product-content">
            <h3><a href="{{ path('product_detail', {'slug': product.slug }) }}">{{ product.name }}</a></h3>
            <div class="product-price">
                <span class="old">${{ product.price }}</span>
                <span>$50.00</span>
            </div>
        </div>
       {# {{ render(controller('App\\Controller\\Front\\DefaultController::productmodal', {'id' : product.id,'modal': product.modal})) }}#}
    </div>

{% endfor %}

