<h2>Bestsellers</h2>
{% for item in bestsellers %}
    <div class="item">
        <a href="{{ path('product_detail', {'slug': item.slug}) }}"><img
                    src="{{ asset('' ~ item.image) }}"
                    alt="Some Shoes in Animal with Cut Out"></a>
        <h3><a href="{{ path('product_detail', {'slug': item.slug}) }}">{{ item.name }}</a></h3>
        <div class="price">${{ item.saleprice }}.00</div>
    </div>
{% endfor %}

